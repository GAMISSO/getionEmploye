
    {% extends 'base.html.twig' %}
    {% block body %}
  <!-- Contenu principal -->
  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-semibold">{{ titre }}</h3>
      {% if is_granted('ROLE_ADMIN') %}
        <a href="{{path('app_employe_add')}}" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Nouveau employe</a>
      {% endif %}
    </div>

    <!-- Barre de recherche -->
    <div class="card-body">
      {{ form_start(formSearch) }}
        <div class="row g-3">
          <div class="col-md-3">
            <div class="input-group">
                  {{ form_widget(formSearch.numero)}}
            </div>
          </div>
          <div class="col-md-3">
                {{form_widget(formSearch.departement)}}
          </div>
            <div class="col-md-3">
                {{ form_widget(formSearch.isArchived)}}
            </div>
            <div class="col-md-3">
                {{ form_widget(formSearch.btnSaveEmp)}}
            </div>
        </div>
      {{ form_end(formSearch) }}
    </div>
    

    <!-- Tableau -->
    <div class="table-responsive">
      {% include 'components/messageFlash.html.twig' %}
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th>photo</th>
            <th>Numero</th>
            <th>nom-prenom</th>
            <th>Telephone</th>
            <th>Dat d'embauche</th>
            <th>Departement</th>
            <th>Statut</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            {% for item in employes %}
            <tr>
                <td>
                  <img src="{{ item.photo }}" alt="Photo de {{ item.nomComplet }}" width="50" height="50" class="rounded-circle">
                </td>
                <td>{{item.numero}}</td>
                <td>{{item.nomComplet}}</td>
                <td>{{item.telephone}}</td>
                <td>{{item.embaucheAt|date("d/m/Y")}}</td>
                <td>{{item.departementName}}</td>
                <td>
                  {% include "components/statut.html.twig" with {active:item.isArchived,color:'info'} %}
                </td>
                <td>
                <a href="#" class="btn btn-sm btn-primary"><i class="bi bi-eye"></i>Details</a>
                <a href="#" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i>Edit</a>
                <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i>Archive</a>
                </td>
            </tr>
            {%else%}
                <div class="alert alert-danger" role="alert"> la liste est vid√© !!!</div>
            {%endfor%}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    {% include "components/pagination.html.twig" with {nbrePage:nbrePage,pageEncours:pageEncours,pathName:'app_employe_list'} %}
  </div>
{% endblock %}

