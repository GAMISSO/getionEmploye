
    {% extends 'base.html.twig' %}
    {% block body %}
  <!-- Contenu principal -->
  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-semibold">{{ titre }}</h3>
      <a href="{{path('app_employe_add')}}" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Nouveau employe</a>
    </div>

    <!-- Barre de recherche -->
    <div class="row mb-3">
      <div class="col-md-5">
        <input type="text" class="form-control" placeholder="Rechercher sur numéro...">
      </div>
      <div class="col-md-3">
            <select class="form-select" onchange="if (this.value) window.location.href = this.value;">
                <option value="">{{ 'Départements' }}</option>
                {% for depart in departements %}
                    <option value="{{ path('app_employe_list_by_dept', {'idDept': depart.id}) }}"
                        {% if depart.id == app.request.get('idDept') %}selected{% endif %}>
                        {{ depart.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option selected>status</option>
                <option></option>
            </select>
        </div>
    </div>

    <!-- Tableau -->
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>nom-prenom</th>
            <th>Telephone</th>
            <th>Dat de création</th>
            <th>Dat d'embauche</th>
            <th>Departement</th>
            <th>Statut</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            {% for item in employes %}
            <tr>
                <td>{{item.id}}</td>
                <td>{{item.nomComplet}}</td>
                <td>{{item.telephone}}</td>
                <td>{{item.createAt|date("d/m/Y")}}</td>
                <td>{{item.updateAt|date("d/m/Y")}}</td>
                <td>{{item.departement.name}}</td>
                <td>
                  <span class="badge {% if item.isArchived %}bg-success{% else %}bg-danger{% endif %}">
                    {% if item.isArchived %}
                        Archivé
                    {% else %}
                        Actif
                    {% endif %}
                  </span>
                </td>
                <td>
                <a href="#" class="btn btn-sm btn-primary"><i class="bi bi-eye"></i>Details</a>
                <a href="#" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i>Edit</a>
                <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i>Archive</a>
                </td>
            </tr>
            {%else%}
                <div class="alert alert-danger" role="alert"> la liste est vidé !!!</div>
            {%endfor%}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    {% include "components/pagination.html.twig" with {nbrePage:nbrePage,pageEncours:pageEncours,pathName:'app_employe_list'} %}
  </div>
{% endblock %}

