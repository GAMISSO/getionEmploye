
        {% extends 'base.html.twig' %}
        {% block body %}
    <!-- Contenu principal -->
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-semibold">Liste des employes</h3>
        
        </div>

    <!-- Barre de recherche -->
    <div class="row g-3">
        <div class="col-md-5">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nouveau Departement...">
            </div>
            
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-secondary" Type="button"> Enregistrer</button>
        </div>
      
    </div>

    <!-- Tableau -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date Creation</th>
                <th>status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for item in datas %}
                    <tr>
                        <td>{{item.id}}</td>
                        <td>{{item.name}}</td>
                        <td>{{item.createAt|date("d/m/Y")}}</td>
                        <td><span class="badge bg-info"> new</span></td>
                        <td>
                        <a href="{{ path('app_employe_list_by_dept', {'idDept': item.id}) }}" class="btn btn-sm btn-primary">
                            <i class="bi bi-eye"></i>Employes
                        </a>
                        <a href="#" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i>Edit</a>
                        <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i>Archive</a>
                        </td>
                    </tr>
                {%else%}
                    <div class="alert alert-danger" role="alert"> la liste est vidé !!!</div>
                {%endfor%}
            
            
            
            
            </tbody>
        </table>
    </div>
        </div>
    </div>
    

    <!-- Pagination -->
    <nav>
      <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link">Précédent</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
      </ul>
    </nav>
  </div>
{% endblock %}
