
        {% extends 'base.html.twig' %}
        {% block body %}
    <!-- Contenu principal -->
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-semibold">Liste des employes</h3>
        
        </div>

    <!-- Barre de recherche -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            {% include 'components/messageFlash.html.twig' %}
        {{ form_start(formDept,{'attr':{
                'data-turbo':'false'
        }}) }}
            <div class="row g-3">

                <div class="col-md-5">
                    <div class="input-group">
                        {{ form_widget(formDept.name) }}
                    </div>
                    <div class="text-danger">
                        {{ form_errors(formDept.name) }}
                    </div>
                </div>
                <div class="col-md-2">
                    {{ form_widget(formDept.btnSaveDept,{label:"Enregistrer",attr:{'class':'btn btn-outline-secondary'}}) }}
                </div>
            </div>
        {{ form_end(formDept) }}
        </div>
        
    </div>
    

    <!-- Tableau -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Nbre employe</th>
                <th>Date Creation</th>
                <th>status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for item in datas %}
                    <tr>
                        <td>{{item.id}}</td>
                        <td>{{item.name}}</td>
                        <td>{{item.nbreEmploye}}</td>
                        <td>{{item.createAt|date("d/m/Y")}}</td>
                        <td>{% include "components/statut.html.twig" with {active:item.isDeleted,color:'info'} %}</td>
                        <td>
                        <a href="{{ path('app_employe_list', {'idDept': item.id}) }}" class="btn btn-sm btn-primary">
                            <i class="bi bi-eye"></i>Employes
                        </a>
                        <a href="#" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i>Edit</a>
                        <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i>Archive</a>
                        </td>
                    </tr>
                {%else%}
                    <div class="alert alert-danger" role="alert"> la liste est vid√© !!!</div>
                {%endfor%}
            
            
            
            
            </tbody>
        </table>
    </div>
        </div>
    </div>
    
    {% include "components/pagination.html.twig" with {nbrePage:nbrePage,pageEncours:pageEncours,pathName:'app_departement_list'} %}
  </div>
{% endblock %}
